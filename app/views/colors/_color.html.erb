<li id="color-<%= color.id %>" class="color-li" style="background-color: #<%= lighten_hex(color.hex, 100) %>">
  <div class="color-prev" style="background-color: #<%= color.hex %>">
    <div style="width: 100%; height: 100%; margin: 0; position: relative">
      <span class="color-prev-hex">#<%= color.hex %></span>
      <%= link_to gravatar_for(color.user, size: 25), color.user, alt: color.user, class: "color-gravatar" %>
    </div>
  </div>
  <div class="color-info">
    <span class="color-user"><%= color.user.name %></span>
    <span class="color-desc"><%= color.description %></span>
  </div>
</li>
