<h1>Log in</h1>
<div id="form-outer">
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :remember_me, class: "inline" do %>
      <%= f.check_box :remember_me, class: "checkbox" %>
      <span class="remember-span">Remember me on this computer.</span>
    <% end %>

    <%= f.submit "Log in", class: "button" %>
  <% end %>
  <%= link_to "Don't have an account? Sign up here!", signup_path %>
</div>
