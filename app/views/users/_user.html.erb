<li class="user-outer">
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if !current_user.nil? && !current_user?(@user) %>
    <% if current_user.admin? %>
       | <%= link_to "delete", user, method: :delete, data: { confirm: "Are you sure?" } %>
     <% end %>
   <% end %>
</li>
