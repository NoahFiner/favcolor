<h1><%= @user.name %></h1>
<div id="user-info">
  <%= gravatar_for @user, size: 100 %>
  <div id="user-info-text">
    <p class="email"><%= @user.email %></p>
  </div>
  <div id="options-outer">
    <% if current_user == @user %>
      <%= link_to "<div class='button'>Edit your information</div>".html_safe, edit_user_path(current_user), class: "edit-info" %>
    <% end %>
  </div>
</div>
